# Garry's Mod devtools aliases

alias gmwine="WINEPREFIX=$HOME/.local/share/Steam/steamapps/compatdata/4000/pfx /usr/bin/wine"
alias gmad="gmwine $HOME/.local/share/Steam/steamapps/common/GarrysMod/bin/gmad.exe"
alias hammer="gmwine $HOME/.local/share/Steam/steamapps/common/GarrysMod/bin/hammer.exe"
alias vtex="gmwine $HOME/.local/share/Steam/steamapps/common/GarrysMod/bin/vtex.exe"
alias crowbar="gmwine $HOME/.local/share/Steam/steamapps/common/GarrysMod/Crowbar.exe"
alias vtfedit="gmwine $HOME/Apps/VTFEdit/x64/VTFEdit.exe"